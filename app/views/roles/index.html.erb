<h1>Listing roles</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% for role in @roles %>
  <tr>
    <td><%=h role.name %></td>
    <td><%= link_to 'Show', client_role_path(@client, role) %></td>
    <td><%= link_to 'Edit', edit_client_role_path(@client, role) %></td>
    <td><%= link_to 'Destroy', client_role_path(@client, role), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New role', new_client_role_path(@client) %>
