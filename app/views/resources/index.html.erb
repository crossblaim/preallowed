<h1>Listing resources</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% for resource in @resources %>
  <tr>
    <td><%=h resource.name %></td>
    <td><%= link_to 'Show', client_resource_path(@client, resource) %></td>
    <td><%= link_to 'Edit', edit_client_resource_path(@client, resource) %></td>
    <td><%= link_to 'Destroy', client_resource_path(@client, resource), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New resource', new_client_resource_path(@client) %>
